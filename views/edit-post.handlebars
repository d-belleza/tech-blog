<div class="card">
    <div class="card-header">
        <h3>Edit Post</h3>
    </div>
    <form id="edit-post-form" class="card-body edit-post-form">
        <label for="post-title">Title</label>
        <input type="text" name="post-title" id="post-title" value="{{post.title}}"/>

        <label for="post-body">Content</label>
        <textarea name="post-body" id="post-content" rows="10">{{post.body}}</textarea>

        <button type="submit" class="btn">Update</button>
        <button type="button" class="btn delete-post-btn">Delete</button>
    </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>