<div class="card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <input type="text" name="post-title" id="post-title" class="form-input" value="{{post.title}}"/>

        <label for="post-content" class="form-label">Content</label>
        <textarea name="post-content" id="post-content" class="form-input">{{post.content}}</textarea>

        <button type="submit" class="btn">Update</button>
        <button type="button" class="btn delete-post-btn">Delete</button>
    </form>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>