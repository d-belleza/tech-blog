<div class="card">
    <div class="card-header">
        <h2>Create New Post</h2>
    </div>
    <form id="new-post-form" class="card-body new-post-form">
        <div>
            <label for="post-title" class="form-label">Title</label>
            <input type="text" name="post-title" id="post-title" class="form-input"/>
        </div>

        <div>
            <label for="post-content" class="form-label">Content</label>
            <textarea name="post-content" id="post-content" class="form-input"></textarea>
        </div>
        
        <button type="submit" class="btn">Create</button>
    </form>
</div>

<script src="/javascript/add-post.js"></script>

